{
  "name": "belumont-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=@belumont/web",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write '**/*.{ts,tsx,md}'",
    "lint:ci": "npm run lint $(git diff --name-only --diff-filter=ACMRTUXB origin/main | grep  -E \"(.js$|.jsx$|.ts$|.tsx$)\") --quiet",
    "prettier:ci": "prettier --check $(git diff --name-only --diff-filter=ACMRTUXB origin/main | grep  -E \"(js,jsx,ts,tsx,css,scss,less,html,json,md$)\")",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,scss,less,html,json,md}\"",
    "prettier:write": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,less,html,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@9.13.0"
}
